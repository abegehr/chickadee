{
  "name": "@chickadee/service",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "check-types": "tsc --noEmit",
    "build": "vite build && vite build --ssr",
    "preview": "$npm_execpath run build && wrangler dev dist-server/index.js",
    "deploy": "$npm_execpath run build && wrangler deploy dist-server/index.js",
    "wrangler": "exec wrangler"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.3",
    "@tailwindcss/vite": "^4.1.3",
    "hono": "^4.7.6",
    "tailwindcss": "^4.1.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^0.1.21",
    "@cloudflare/workers-types": "^4.20250413.0",
    "@hono/vite-build": "^1.6.0",
    "daisyui": "^5.0.19",
    "vite": "^6.2.6",
    "vite-plugin-ssr-hot-reload": "^0.4.2",
    "wrangler": "^4.10.0"
  }
}
